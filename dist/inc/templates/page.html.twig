{% extends 'main-template.html' %}

{% block content %}
<section>
    <h1>{{ page.title|striptags('<em>')|raw }}</h1>
    {{ page.content|raw }}
</section>

{% if page.sub_navigation %}
<aside>
    {% set navigation_hide_unselected_child_links = false %}
    {% set navigation_items = page.sub_navigation %}
    {% set navigation_modifier_class = 'navigation--sub-navigation' %}
    {% include 'components/navigation.html.twig' %}
</aside>
{% endif %}
{% endblock %}