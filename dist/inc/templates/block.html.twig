<div class="block block--{{ block.post_name }}">
    {{ block.content|raw }}

    {% if block.can_edit %}
        <div class="block__edit-link">
            <a href="{{ block.edit_link }}">Edit Content Block</a>
        </div>
    {% endif %}
</div>